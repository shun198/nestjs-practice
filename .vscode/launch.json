{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "NestJS Debug (Hot Reload)",
            // use npx to run ts-node-dev
            "runtimeExecutable": "npx",
            // Use `npx ts-node-dev` to enable hot reloading
            "runtimeArgs": [
                "ts-node-dev",
                "--respawn",
                "--inspect",
                "src/main.ts"
            ],
            "cwd": "${workspaceFolder}/application",
            "console": "integratedTerminal"
        }
    ]
}
